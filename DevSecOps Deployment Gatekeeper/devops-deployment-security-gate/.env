# DevSecOps Deployment Gatekeeper - Environment Variables

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.2

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here
GITHUB_API_BASE_URL=https://api.github.com

# SonarQube Configuration
SONARQUBE_URL=https://your-sonarqube-instance.com
SONARQUBE_TOKEN=your_sonarqube_authentication_token_here
SONARQUBE_TIMEOUT=300
SONARQUBE_POLL_INTERVAL=10

# Slack Configuration
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here
SLACK_NOTIFICATION_CHANNEL=#security-alerts

# Application Settings
SECRET_KEY=your_secret_key_here
LOG_LEVEL=INFO
DEBUG=False

# Security Policies
CRITICAL_VULNERABILITY_THRESHOLD=0
MAJOR_VULNERABILITY_THRESHOLD=5
ALLOW_MANUAL_OVERRIDE=False

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=8090